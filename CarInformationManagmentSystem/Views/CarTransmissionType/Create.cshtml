@model CarInformationManagmentSystem.Models.Entities.CarTransmissionType

@{
    ViewData["Title"] = "Create Car Transmission Type";
}

<div class="create-car-type-container">
    <h2>Create Car Transmission Type</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@Url.Action("Index", "Car")" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
