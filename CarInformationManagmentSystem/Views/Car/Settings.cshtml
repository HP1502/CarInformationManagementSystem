@model CarInformationManagmentSystem.Models.Entities.Car

@{
    ViewData["Title"] = "Car Settings";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Settings" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManufacturerId" class="control-label"></label>
        <select asp-for="ManufacturerId" class="form-control">
            <option value="">-- Select Manufacturer --</option>
            @foreach (var manufacturer in ViewBag.Manufacturers as IEnumerable<CarInformationManagmentSystem.Models.Entities.Manufacturer>)
            {
                <option value="@manufacturer.Id" >
                    @manufacturer.Name
                </option>
            }
        </select>
        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TypeId" class="control-label"></label>
        <select asp-for="TypeId" class="form-control">
            <option value="">-- Select Car Type --</option>
            @foreach (var type in ViewBag.CarTypes as IEnumerable<CarInformationManagmentSystem.Models.Entities.CarType>)
            {
                <option value="@type.Id" >
                    @type.Type
                </option>
            }
        </select>
        <span asp-validation-for="TypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TransmissionId" class="control-label"></label>
        <select asp-for="TransmissionId" class="form-control">
            <option value="">-- Select Transmission --</option>
            @foreach (var transmission in ViewBag.Transmissions as IEnumerable<CarInformationManagmentSystem.Models.Entities.CarTransmissionType>)
            {
                <option value="@transmission.Id" >
                    @transmission.Name
                </option>
            }
        </select>
        <span asp-validation-for="TransmissionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Engine" class="control-label"></label>
        <input asp-for="Engine" class="form-control" />
        <span asp-validation-for="Engine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BHP" class="control-label"></label>
        <input asp-for="BHP" class="form-control" />
        <span asp-validation-for="BHP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mileage" class="control-label"></label>
        <input asp-for="Mileage" class="form-control" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Seat" class="control-label"></label>
        <input asp-for="Seat" class="form-control" />
        <span asp-validation-for="Seat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AirBagDetails" class="control-label"></label>
        <input asp-for="AirBagDetails" class="form-control" />
        <span asp-validation-for="AirBagDetails" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BootSpace" class="control-label"></label>
        <input asp-for="BootSpace" class="form-control" />
        <span asp-validation-for="BootSpace" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Car")" class="btn btn-secondary">Back to List</a>
    </div>
</form>
